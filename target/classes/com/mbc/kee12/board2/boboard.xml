<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    

<mapper namespace="com.mbc.kee12.board2.BoardService2">
<insert id="insertboard">
insert into board0403 values (board0403_seq.nextval,#{param1},#{param2},#{param3}
,sysdate,0,board0403_seq.currval,0,0)
</insert>
<select id="bdoutss" resultType="com.mbc.kee12.board2.BoardDTO2">
select bnum,btitle,bwriter,bcontent,to_char(bdate,'yyyy-MM-dd')bdate
,breadcnt,groups,step,indent from board0403 order by groups desc,step asc
</select>
<update id="bdreadcount">
update board0403 set breadcnt = breadcnt +1 where bnum=#{param1}
</update>
<select id="bddetail" resultType="com.mbc.kee12.board2.BoardDTO2">
select bnum,btitle,bwriter,bcontent,to_char(bdate,'yyyy-MM-dd')bdate
,breadcnt,groups,step,indent from board0403 where bnum=#{param1}
</select>
<select id="bdalldata" resultType="com.mbc.kee12.board2.BoardDTO2">
select bnum,btitle,bwriter,bcontent,to_char(bdate,'yyyy-MM-dd')bdate
,breadcnt,groups,step,indent from board0403 where bnum=#{param1}
</select>
<insert id="boardappend">
insert into board0403 values (board0403_seq.nextval,#{param2},#{param3},#{param4}
,sysdate,0,#{param5},#{param6},#{param7})
</insert>
<update id="stepss">
update board0403 set step = step+1 where groups=#{param1} and step > #{param2}
</update>

