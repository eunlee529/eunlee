<!-- 페이징처리에서 전체레코드수 구하기 -->
<select id="total22" resultType="int">
   select count(*)from BOARD0403
</select>

<select id="page22" resultType="com.mbc.kee12.board2.BoardDTO2">
   select * from (
   select rownum rn,A.* from(  
   select bnum,bwriter,btitle,bcontent,to_char(bdate,'yyyy-MM-dd')bdate
   ,breadcnt,groups,step,indent from BOARD0403 order by groups DESC,step asc)A)
   where rn between #{start} AND #{end}
</select>
